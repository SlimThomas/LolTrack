@page
@model LolTrack.Pages.MyProfile.MyProfileModel
@{
}

<body>
    <h1 class="StatBox" style="position: center; margin-top: 10px; margin-left: 10%">My Profile</h1>
        
            <div class="profile-container" style="center">
                 <div class="profile-details">
            <h1 class="StatBox" style="color:#efdc9e; margin-left:15%">Welcome, @Model.user.UserName <br /><img src="/Images/@Model.user.ProfileSplash" class="profile-pic"<br /><br>Ladder rank: 357,427 (49.67% of top)</br></h1>

                <div class="detailcontainer">
                    <table class="StatBoxMyProfile" style="width: 15%; margin-left:15%">
                        @if (Model.user.UserID != null)
                                    {
                            <thead>
                                <tr>
                                    <th style="text-align:left">Stats</th>
                                    <th>@Model.user.UserName</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="text-align:left">Matches</td>
                                    <td>@Model.player.TotalMatch</td>
                                </tr>
                                <tr>
                                    <td style="text-align:left">Total Wins</td>
                                    <td>@Model.player.TotalWins</td>
                                </tr>
                                <tr>
                                    <td style="text-align:left">Total Losses</td>
                                    <td>@Model.player.TotalLosses</td>
                                </tr>
                                <tr>
                                    <td style="text-align:left">Win%</td>
                                    <td>@Model.player.WinPerC</td>
                                </tr>
                                <tr>
                                    <td style="text-align:left">KDA</td>
                                    <td>@Model.player.KDA</td>
                                </tr>
                                <tr>
                                    <td style="text-align:left">Average Vision</td>
                                    <td>@Model.player.AvgVision</td>
                                </tr>
                            </tbody>
                        }
                    </table>
                   

                        <table class="StatBoxMyProfile" style="left:50%; bottom: 280px;">
                            <thead>
                                <tr class="backtbn">
                                    <th>Kills</th>
                                    <th>Deaths</th>
                                    <th>Assists</th>
                                    <th>KDA</th>
                                    <th>VisionScore</th>
                                    <th>LaneType</th>
                                    <th>Champion</th>
                                    <th>SSpell</th>
                                    <th>Minions</th>
                                </tr>
                            </thead>
                            @foreach (var p in Model.matches)
                            {
                                @if (p.PlayerMatchID == Model.user.UserPlayerID)
                                {
                                    @if (p.Win == true)
                                    {


                                        <tbody>
                                            <tr class="MatchL" style="background: linear-gradient(green, darkgreen)">
                                                <td>@p.Kills</td>
                                                <td>@p.Deaths</td>
                                                <td>@p.Assists</td>
                                                <td>@p.KDA</td>
                                                <td>@p.Visionscore</td>
                                                <td>@p.LaneType</td>
                                                <td>@p.Champions</td>
                                                <td>@p.SSpells</td>
                                                <td>@p.Minions</td>
                                            </tr>
                                        </tbody>
                                    }
                                    @if (p.Win != true)
                                    {
                                        <tbody>
                                            <tr class="MatchL" style="background: linear-gradient(red, maroon)">
                                                <td>@p.Kills</td>
                                                <td>@p.Deaths</td>
                                                <td>@p.Assists</td>
                                                <td>@p.KDA</td>
                                                <td>@p.Visionscore</td>
                                                <td>@p.LaneType</td>
                                                <td>@p.Champions</td>
                                                <td>@p.SSpells</td>
                                                <td>@p.Minions</td>
                                            </tr>
                                        </tbody>
                                    }
                                }
                            }
                        </table>
                </div>

                 </div>

                  

            </div>
        
     
    <div>
        <img src="~/Images/Ad4MyProfile.png" alt="Ad4" class="Ad4" />
    </div>

</body>
