<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LolTrack</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/LolTrack.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LoLTrackStyles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-image: url('/Images/SummonersRift4K-Index.jpeg');
            background-position: center top;
            background-size: cover;
            background-attachment: fixed;
            background-repeat: no-repeat;
            min-height: 500px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg custom-navbar" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Index">LolTrack</a>
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" asp-page="/Index">Home</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/CRUDChamp/GetAllChamps">Champions</a>
@*                         <a class="nav-link" asp-page="/CRUDMatch/GetAllMatches">M</a> *@
                    </li>
@*                     <li class="nav-item">
                        <a class="nav-link" asp-page="/CRUDPlayer/GetAllPlayers">Players</a>
                    </li> *@
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-page="CRUDSSpells/GetallSSpells">Summoner Spells</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-page="/Index">Runes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-page="/Index">Items</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-page="/Index">Coaching</a>
                    </li>
                  
                    

                </ul>
                <ul class="navbar-nav ms-auto">
                   
                    @{
                        if (Context.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                            <a class="nav-link" asp-page="/MyProfile/MyProfile">My Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/LogIn/LogOutPage">
                                    <i class="fas fa-sign-out-alt"></i> Log out
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/LogIn/LogInPage">
                                    <i class="fas fa-sign-in-alt"></i> Log in
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer-text-muted">
        <div class="container footer-container">
            <div class="footer-section">
                <h4>LolTrack</h4>
                <ul>
                    <li><a href="#">About LolTrack</a></li>
                    <li><a href="#">Company</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Games</h4>
                <ul>
                    <li><a asp-page="/Index">League of Legends</a></li>
                    <li><a href="#">Teamfight Tactic</a></li>
                    <li><a href="#">Counter-Strike</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Resources</h4>
                <ul>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Terms of Use</a></li>
                    <li><a href="#">Help</a></li>
                    <li><a href="#">Email Inquiry</a></li>
                    <li><a href="#">Contact us</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>More</h4>
                <ul>
                    <li><a href="#">Business</a></li>
                    <li><a href="#">Advertise</a></li>
                </ul>
            </div>
        </div>
    </footer>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.2.2/dist/slate/bootstrap.min.css">
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
