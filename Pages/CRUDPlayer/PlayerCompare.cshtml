@page
@model LolTrack.Pages.CRUDPlayer.PlayerCompareModel
@{
}
<body>
<div class="Profile-block">
<div class="profile-container">
    <table>
        <tr>
            <th style="width:50%">Name</th>
            <th>
                @Model.player.PlayerName
            </th>
            <th>
                @Model.userplayer.PlayerName
            </th>

        </tr>
        <tr>
            <td>TotalMatch</td>
            <td>
                @Model.player.TotalMatch
            </td>
            <td>
                @Model.userplayer.TotalMatch    
            </td>
        </tr>
        <tr>
            <td>TotalWins</td>
            <td>
                @Model.player.TotalWins
            </td>
            <td>
                @Model.userplayer.TotalWins
            </td>
        </tr>
        <tr>
            <td>TotalLosses</td>
            <td>
                @Model.player.TotalLosses
            </td>
            <td>
                @Model.userplayer.TotalLosses
            </td>
        </tr>
        <tr>
            <td>Win%</td>
            <td>
                @Model.player.WinPerC
            </td>
            <td>
                @Model.userplayer.WinPerC
            </td>
        </tr>
        <tr>
            <td>KDA</td>
            <td>
                @Model.player.KDA
            </td>
            <td>
                @Model.userplayer.KDA
            </td>
        </tr>
        <tr>
            <td>AvgVision</td>
            <td>
                @Model.player.AvgVision
            </td>
            <td>
                @Model.userplayer.AvgVision
            </td>
        </tr>
    </table>
    </div>
    </div>
</body>

<style>
    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        border: 20px groove #efdc9e;
    }

    th, td {
        text-align: center;
        padding: 16px;
    }

    th:first-child, td:first-child {
            text-align: center;
    }

</style>